<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btn_spock"
        android:layout_width="120dp"
        android:layout_height="94dp"
        android:layout_marginBottom="148dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/spock"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_lizard"
        android:layout_width="103dp"
        android:layout_height="97dp"
        android:layout_marginStart="3dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/btn_spock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toEndOf="@+id/btn_spock"
        app:layout_constraintTop_toTopOf="@+id/btn_spock"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/lizard"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_scissors"
        android:layout_width="118dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_spock"
        app:layout_constraintVertical_bias="0.983"
        app:srcCompat="@drawable/scissors"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_paper"
        android:layout_width="112dp"
        android:layout_height="86dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_scissors"
        app:layout_constraintTop_toBottomOf="@+id/btn_lizard"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/paper"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_rock"
        android:layout_width="107dp"
        android:layout_height="93dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="28dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/btn_paper"
        app:srcCompat="@drawable/rock"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView_computer_move"
        android:layout_width="166dp"
        android:layout_height="158dp"
        android:layout_marginTop="28dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/scissors" />

    <TextView
        android:id="@+id/textView_text_result"
        android:layout_width="417dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_your_move"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_computer_move"
        tools:text="Loser" />

    <ImageView
        android:id="@+id/imageView_your_move"
        android:layout_width="192dp"
        android:layout_height="169dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_spock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@drawable/spock" />

</androidx.constraintlayout.widget.ConstraintLayout>